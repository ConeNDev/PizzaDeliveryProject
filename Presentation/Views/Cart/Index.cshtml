@model IEnumerable<PizzaApp.Domain.Entities.Order>

@{
    ViewData["Title"] = "Cart";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="border-bottom">
                <h4 class="text-dark">Pizza Cart</h4>
                <p class="text-muted fst-italic">@Model.Count() Pizza(s) in Cart</p>
            </div>
            @foreach (var order in Model)
            {
                <div class="border-bottom d-flex flex-wrap align-items-center p-2">
                    <img src="@order.ImageUrl" class="cartImage" />
                    <div class="ms-3">
                        <a href="/Menu/Order?id=@order.PizzaId"
                           class="text-decoration-none text-dark cartTitle fw-bold">@order.PizzaName</a>
                        <p>Quantity: @order.Quantity</p>
                        <p>Price: @order.Price</p>
                        <p>Total: @order.TotalAmount</p>
                    </div>
                    <button onclick="removeFromCart('@order.Id')"
                            class="ms-auto btn btn-danger">
                        Remove
                    </button>
                </div>
            }
            @if (Model.Count() == 0)
            {
                <div class="text-center">
                    <p class="fw-bold fs-4">Your cart is empty</p>
                </div>
            }
            else
            {
                <div class="text-center mt-4">
                    <button onclick="orderAll()" class="btn btn-primary btn-success">Order All</button>
                </div>
            }
        </div>
    </div>
</div>